<%- include('../../fragments/header.ejs') %>
<main>
    <h2>New order</h2>

    <form class="form" novalidate onsubmit="return validateForm();">
        <label for="clientContactInfo">Contact info: <span class="symbol-required">*</span></label> 
        <input type="text" name="clientContactInfo" id="clientContactInfo" class="error-input" placeholder="e-mail address" required>
        <span id="errorClientContactInfo" class="errors-text">Field required dummy.</span>

        <label for="shippingCompany"> Shipping method: <span class="symbol-required">*</span></label> <!-- Can't figure out displaying a "Field required" message for this field -->
        <select name="shippingCompany" id="shippingCompany" class="error-input" required>
            <option>-- Choose shipping method --</option>
            <option value="1"> DHL</option>
            <option value="2"> Inpost</option>
            <option value="3"> Poczta Polska</option>
        </select>
        <span id="errorShippingCompany" class="errors-text">Field required dummy.</span> <!-- added class errors-text because validation form wasn't able to get over the lack of it apparently -->

        <label for="premiumDelivery">Premium delivery: </label>  <!-- premiumDelivery is nullable therefore no "required" keyword-->
        <input type="checkbox" name="premiumDelivery" id="premiumDelivery">
        <span id="errorPremiumDelivery"></span>

        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text">There are errors in the form!</p>
            <input type="submit" value="Next" class="form-button-submit">
            <a href="/Order/" class="form-button-cancel">Cancel</a>
        </div>
    </form>
</main>
<%- include('../../fragments/footer.ejs') %>